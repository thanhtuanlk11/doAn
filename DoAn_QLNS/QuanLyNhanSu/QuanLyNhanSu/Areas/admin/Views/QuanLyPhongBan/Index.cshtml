@{
    ViewBag.Title = "Phòng ban";
}
@using QuanLyNhanSu.Models
@model List<PhongBan>

<div class="">
    <div class="">
        <h1 class="page-header">
            Phòng ban
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> <a href="@Url.Action("index","Admin")">Tổng quan</a>
            </li>
            <li>
                <i class="fa fa-tasks"></i> Phòng ban
            </li>
        </ol>
    </div>
</div>

<div style="margin:10px">
    <a class="btn btn-primary" href="@Url.Action("ThemPhongBan", "QuanLyPhongBan")">
        Thêm phòng ban
    </a>
    <a class="btn btn-primary" href="@Url.Action("CapNhatPhuCap", "QuanLyPhongBan")">
        Phụ cấp chức vụ
    </a>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
        <thead>
            <tr class="success">
                @*<th>Mã phòng ban</th>*@
                <th>Tên phòng ban</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Số phòng ban: @Model.Count</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {

                    <tr>
                        @*<td>@item.MaPhongBan</td>*@
                        <td>@item.TenPhongBan</td>
                        <td>@item.sdt_PhongBan</td>
                        <td>@item.DiaChi</td>
                        <td>

                            <a class="btn btn-info  " href="@Url.Action("DanhSachNhanVien", "QuanLyPhongBan", new { @id = @item.MaPhongBan })"><span aria-hidden="true">Danh sách nhân viên</span> </a>
                            <a class="btn btn-warning" href="@Url.Action("SuaPhongBan", "QuanLyPhongBan", new {@id = @item.MaPhongBan })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                            <a class="btn btn-danger  " href="@Url.Action("XoaPhongBan", "QuanLyPhongBan", new { @id = @item.MaPhongBan })"><span aria-hidden="true"><i class="fa fa-trash-o">Xóa</i></span> </a>
                        </td>
                    </tr>

                }

            }

        </tbody>
    </table>
</div>

